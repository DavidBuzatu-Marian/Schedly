<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:autofilledHighlight">@android:color/transparent</item>
        <item name="android:colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="android:colorControlActivated">@color/colorPrimaryDark</item>
        <item name="android:colorControlNormal">@color/colorPrimaryDark</item>
    </style>

    <style name="InputFields">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorPrimaryDark</item>
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
    </style>

    <style name="TextViewLogin">
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="ButtonSubmit">
        <item name="android:textSize">18sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAllCaps">false</item>
        <item name ="android:layout_marginEnd">48dp</item>
        <item name="android:layout_marginStart">48dp</item>
        <item name="android:layout_marginTop">18dp</item>
    </style>
    <style name="ButtonGoogle">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:text">@string/common_signin_button_text_long</item>
        <item name="android:textColor">#757575</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginEnd">48dp</item>
        <item name="android:layout_marginStart">48dp</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:background">@drawable/button_google</item>
        <item name="android:drawableStart">@drawable/googleg_standard_color_18</item>
        <item name="android:drawablePadding">24dp</item>
        <item name="android:padding">8dp</item>
    </style>
    <style name="ButtonFacebook">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:text">@string/act_main_BUT_facebook</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginEnd">48dp</item>
        <item name="android:layout_marginStart">48dp</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:background">@drawable/button_facebook</item>
        <item name="android:drawableStart">@drawable/com_facebook_button_icon</item>
        <item name="android:drawablePadding">24dp</item>
        <item name="android:padding">8dp</item>
    </style>
    <style name="ButtonRegister">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="InputEditText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>


    <style name="ForgottenPassword">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>


    <!-- sign up -->
    <style name="TextViewSignUp">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_marginStart">18dp</item>
        <item name="android:layout_marginEnd">18dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="ButtonRegisterSubmit">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">18dp</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/colorText</item>
    </style>

    <!-- phone number -->
    <style name="RequestPhoneNumberTextView">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/set_up</item>
        <item name="android:layout_marginStart">18dp</item>
        <item name="android:layout_marginEnd">18dp</item>
        <item name="android:layout_marginTop">140dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="RequestPhoneNumberTextViewExtra">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/set_up</item>
        <item name="android:layout_marginStart">18dp</item>
        <item name="android:layout_marginEnd">18dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:fontFamily">sans-serif-condensed-light</item>
    </style>

    <!-- calendar -->
    <style name="Theme.Custom" parent="AppTheme">
        <item name="android:calendarViewStyle">@style/Widget.CalendarView.Custom</item>
    </style>

    <style name="Widget.CalendarView.Custom" parent="android:Widget.CalendarView">
        <item name="android:focusedMonthDateColor">@color/colorPrimaryDark</item>
        <item name="android:weekNumberColor">@color/colorPrimary</item>
        <item name="android:dayOfWeekBackground">@color/set_up</item>
        <item name="android:weekDayTextAppearance">@style/TextAppearanceWeekDay</item>
        <item name="android:dateTextAppearance">@style/TextAppearanceDateText</item>
        <item name="android:textColorPrimary">@color/set_up</item>
        <item name="android:textColorSecondary">@color/set_up</item>
        <item name="android:textColor">@color/set_up</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="TextAppearanceWeekDay">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearanceDateText">
        <item name="android:textSize">18sp</item>
    </style>
    <!-- set profession -->
    <style name="RequestProfessionTextView">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/set_up</item>
        <item name="android:layout_marginStart">18dp</item>
        <item name="android:layout_marginEnd">18dp</item>
        <item name="android:layout_marginTop">140dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="RequestProfessionTextViewExtra">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/set_up</item>
        <item name="android:layout_marginStart">18dp</item>
        <item name="android:layout_marginEnd">18dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:fontFamily">sans-serif-condensed-light</item>
    </style>
    <style name="ButtonProfession">
        <item name="android:textSize">18sp</item>
        <item name="android:padding">18dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
    </style>

    <!-- set working hours -->
    <style name="RequestWorkingHoursTextView">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/set_up</item>
        <item name="android:layout_marginStart">18dp</item>
        <item name="android:layout_marginEnd">18dp</item>
        <item name="android:layout_marginTop">100dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="RequestWorkingHoursTextViewExtra">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/set_up</item>
        <item name="android:layout_marginStart">18dp</item>
        <item name="android:layout_marginEnd">18dp</item>
        <item name="android:layout_marginBottom">18dp</item>
        <item name="android:fontFamily">sans-serif-condensed-light</item>
    </style>
    <style name="RequestWorkingHoursDiffHours">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/set_up</item>
        <item name="android:layout_marginStart">18dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- set working hours -->
    <style name="RequestScheduleDurationTextView">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/set_up</item>
        <item name="android:layout_marginStart">18dp</item>
        <item name="android:layout_marginEnd">18dp</item>
        <item name="android:layout_marginTop">100dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="RequestScheduleDurationTextViewExtra">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/set_up</item>
        <item name="android:layout_marginStart">18dp</item>
        <item name="android:layout_marginEnd">18dp</item>
        <item name="android:layout_marginBottom">18dp</item>
        <item name="android:fontFamily">sans-serif-condensed-light</item>
    </style>


    <color name="set_up">#000000</color>
    <string name="act_main_BUT_facebook">Sign in with Facebook</string>
</resources>
