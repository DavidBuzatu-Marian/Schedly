<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:autofilledHighlight">@android:color/transparent</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="TextInputLayoutTheme" parent="TextAppearance.AppCompat">
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColorHint">@color/colorSetUp</item>
        <item name="colorControlNormal">@color/colorSetUp</item>
        <item name="colorControlActivated">@color/colorSetUp</item>
        <item name="colorControlHighlight">@color/colorSetUp</item>
        <item name="android:textColorHighlight">@color/colorSetUp</item>
        <item name="android:textColorLink">@color/colorSetUp</item>
    </style>

    <style name="InputFields">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorPrimaryDark</item>
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
    </style>

    <style name="TextViewLogin">
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="ButtonSubmit">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingStart">64dp</item>
        <item name="android:paddingEnd">64dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="ButtonGoogle">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:text">@string/common_signin_button_text_long</item>
        <item name="android:textColor">#757575</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginEnd">48dp</item>
        <item name="android:layout_marginStart">48dp</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:background">@drawable/button_google</item>
        <item name="android:drawableStart">@drawable/googleg_standard_color_18</item>
        <item name="android:drawablePadding">24dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="ButtonFacebook">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:text">@string/act_main_BUT_facebook</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginEnd">48dp</item>
        <item name="android:layout_marginStart">48dp</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:background">@drawable/button_facebook</item>
        <item name="android:drawableStart">@drawable/com_facebook_button_icon</item>
        <item name="android:drawablePadding">24dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="ButtonRegister">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="InputEditText">
        <item name="android:textSize">18sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/colorSetUp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>


    <style name="ForgottenPassword">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>


    <!-- sign up -->
    <style name="TextViewSignUp">
        <item name="android:textSize">42sp</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ButtonRegisterSubmit">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">18dp</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/colorText</item>
    </style>

    <!-- phone number -->
    <style name="RequestPhoneNumberTextView">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/colorSetUp</item>
        <item name="android:layout_marginStart">18dp</item>
        <item name="android:layout_marginEnd">18dp</item>
        <item name="android:layout_marginTop">140dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="RequestPhoneNumberTextViewExtra">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorSetUp</item>
        <item name="android:layout_marginStart">18dp</item>
        <item name="android:layout_marginEnd">18dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:fontFamily">sans-serif-condensed-light</item>
    </style>

    <!-- calendar -->
    <style name="Theme.Custom" parent="AppTheme">
        <item name="android:calendarViewStyle">@style/Widget.CalendarView.Custom</item>
    </style>

    <style name="Widget.CalendarView.Custom" parent="android:Widget.CalendarView">
        <item name="android:focusedMonthDateColor">@color/colorPrimary</item>
        <item name="android:weekNumberColor">@color/colorPrimary</item>
        <item name="android:dayOfWeekBackground">@color/colorSetUp</item>
        <item name="android:weekDayTextAppearance">@style/TextAppearanceWeekDay</item>
        <item name="android:dateTextAppearance">@style/TextAppearanceDateText</item>
        <item name="android:textColorPrimary">@color/colorSetUp</item>
        <item name="android:textColorSecondary">@color/colorSetUp</item>
        <item name="android:textColor">@color/colorSetUp</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="TextAppearanceWeekDay">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearanceDateText">
        <item name="android:textSize">18sp</item>
    </style>
    <!-- set profession -->
    <style name="RequestProfessionTextView">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/colorSetUp</item>
        <item name="android:layout_marginStart">18dp</item>
        <item name="android:layout_marginEnd">18dp</item>
        <item name="android:layout_marginTop">140dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="RequestProfessionTextViewExtra">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorSetUp</item>
        <item name="android:layout_marginStart">18dp</item>
        <item name="android:layout_marginEnd">18dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:fontFamily">sans-serif-condensed-light</item>
    </style>

    <style name="ButtonProfession">
        <item name="android:textSize">18sp</item>
        <item name="android:padding">18dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
    </style>

    <!-- set working hours -->
    <style name="RequestWorkingHoursTextView">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/colorSetUp</item>
        <item name="android:layout_marginStart">18dp</item>
        <item name="android:layout_marginEnd">18dp</item>
        <item name="android:layout_marginTop">100dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="RequestWorkingHoursTextViewExtra">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorSetUp</item>
        <item name="android:layout_marginStart">18dp</item>
        <item name="android:layout_marginEnd">18dp</item>
        <item name="android:layout_marginBottom">18dp</item>
        <item name="android:fontFamily">sans-serif-condensed-light</item>
    </style>

    <style name="RequestWorkingHoursDiffHours">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorSetUp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- set appointment duration -->
    <style name="RequestScheduleDurationTextView">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/colorSetUp</item>
        <item name="android:layout_marginStart">18dp</item>
        <item name="android:layout_marginEnd">18dp</item>
        <item name="android:layout_marginTop">100dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="RequestScheduleDurationTextViewExtra">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorSetUp</item>
        <item name="android:layout_marginStart">18dp</item>
        <item name="android:layout_marginEnd">18dp</item>
        <item name="android:layout_marginBottom">18dp</item>
        <item name="android:fontFamily">sans-serif-condensed-light</item>
    </style>


    <!-- forgot password view -->
    <style name="ForgottenPasswordTextView">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/colorSetUp</item>
        <item name="android:layout_marginStart">18dp</item>
        <item name="android:layout_marginEnd">18dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="ForgottenPasswordTextViewExtra">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginStart">18dp</item>
        <item name="android:layout_marginEnd">18dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:fontFamily">sans-serif-condensed-light</item>
    </style>

    <!-- calendar recycler view -->
    <style name="CalendarTVInfo">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorSetUp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="CalendarTVInfoHour">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorExtra</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <!-- calendar popup -->
    <style name="PopupTVName">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorSetUp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="PopupTVPhoneNumber">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorExtra</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="PopupAnimation">
        <item name="android:windowEnterAnimation">@anim/popup_show</item>
        <item name="android:windowExitAnimation">@anim/popup_hide</item>
    </style>

    <string name="act_main_BUT_facebook">Sign in with Facebook</string>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
