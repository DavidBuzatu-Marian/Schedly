<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="center">
        <shape android:shape="rectangle">
            <size
                android:width="48dp"
                android:height="48dp" />
<!--            <stroke-->
<!--                android:width="1dp"-->
<!--                android:color="#FFCC00" />-->
        </shape>
    </item>
    <item android:gravity="center">
        <shape android:shape="rectangle">

            <size
                android:width="48dp"
                android:height="48dp" />
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
        </shape>
    </item>
    <item
        android:bottom="0dp"
        android:gravity="end"
        android:top="32dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/colorEventLessThanHalf"
                android:endColor="@color/colorEventMoreThanHalf"
                android:type="linear"
                android:angle="90"/>
            <size
                android:width="12dp"
                android:height="16dp" />
        </shape>
    </item>
    <item
        android:bottom="14.5dp"
        android:gravity="end"
        android:top="16dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/colorEventMoreThanHalf"
                android:endColor="@color/colorEventFull"
                android:type="linear"
                android:angle="90"/>
            <size
                android:width="12dp"
                android:height="16dp" />
        </shape>
    </item>
</layer-list>