<?xml version="1.0" encoding="UTF-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item  android:gravity="bottom|left" android:bottom="-60dp" android:left="-50dp">
        <shape
            android:shape="oval">
            <gradient
                android:angle="90"
                android:endColor="#216D6A"
                android:startColor="#174240"
                android:type="linear"
                />
            <corners android:radius="0dp" />
            <size android:height="150dp" android:width="150dp"/>
        </shape>
    </item>
    <item  android:gravity="bottom|left" android:bottom="-70dp" android:left="50dp">
        <shape
            android:shape="oval">
            <gradient
                android:angle="90"
                android:startColor="#2B8C87"
                android:endColor="#174240"
                android:type="linear"
                />
            <corners android:radius="0dp" />
            <size android:height="120dp" android:width="120dp"/>
        </shape>
    </item>
</layer-list>

