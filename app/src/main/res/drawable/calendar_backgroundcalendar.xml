<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="top|center_horizontal" android:top="-300dp">
        <shape
            android:shape="oval">
            <gradient
                android:angle="90"
                android:endColor="#2B8C87"
                android:startColor="#174240"
                android:type="linear"
                />
            <corners android:radius="0dp" />
            <size android:height="600dp" android:width="600dp"/>
        </shape>
    </item>

    <item android:gravity="top|right" android:top="-20dp" android:right="-60dp">
        <shape
            android:shape="oval">
            <gradient
                android:angle="90"
                android:endColor="#11FFFFFF"
                android:startColor="#12FFFFFF"
                android:type="linear"
                />
            <corners android:radius="0dp" />
            <size android:height="150dp" android:width="150dp"/>
        </shape>
    </item>

    <item android:gravity="top|left" android:top="-20dp" android:left="-100dp">
        <shape
            android:shape="oval">
            <gradient
                android:angle="90"
                android:endColor="#11FFFFFF"
                android:startColor="#12FFFFFF"
                android:type="linear"
                />
            <corners android:radius="0dp" />
            <size android:height="300dp" android:width="300dp"/>
        </shape>
    </item>

    <item android:gravity="top|left" android:top="60dp" android:left="40dp">
        <shape
            android:shape="oval">
            <gradient
                android:angle="90"
                android:endColor="#11FFFFFF"
                android:startColor="#12FFFFFF"
                android:type="linear"
                />
            <corners android:radius="0dp" />
            <size android:height="100dp" android:width="100dp"/>
        </shape>
    </item>

    <item android:gravity="top|right" android:top="-40dp" android:right="60dp">
        <shape
            android:shape="oval">
            <gradient
                android:angle="90"
                android:endColor="#11FFFFFF"
                android:startColor="#12FFFFFF"
                android:type="linear"
                />
            <corners android:radius="5dp" />
            <size android:height="80dp" android:width="80dp"/>
        </shape>
    </item>


</layer-list>

