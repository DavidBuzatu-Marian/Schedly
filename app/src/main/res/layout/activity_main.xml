<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/login_background">

    <TextView
        style="@style/TextViewLogin"
        android:id="@+id/act_main_TV_Welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/act_main_TIL_email"
        style="@style/InputFields"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_login_email"
        android:layout_below="@id/act_main_TV_Welcome">

        <com.google.android.material.textfield.TextInputEditText
            style="@style/InputEditText"
            android:id="@+id/act_main_TIET_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/act_main_TIL_password"
        style="@style/InputFields"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/act_main_TIL_email"
        android:hint="@string/hint_login_password">

        <com.google.android.material.textfield.TextInputEditText
            style="@style/InputEditText"
            android:id="@+id/act_main_TIET_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"/>

    </com.google.android.material.textfield.TextInputLayout>


    <Button
        style="@style/ButtonSubmit"
        android:id="@+id/act_main_BUT_signin"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/sign_in_button"
        android:background="@drawable/button_submit"
        android:stateListAnimator="@animator/button_click_animator"
        />
    <TextView
        style="@style/RegisterTextView"
        android:id="@+id/act_main_TV_Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register_text"
        android:layout_below="@id/act_main_BUT_Google"
        android:layout_centerHorizontal="true"/>
    <Button
        style="@style/ButtonRegister"
        android:background="@drawable/button_submit"
        android:id="@+id/act_main_BUT_signup"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/act_main_TV_Register"
        android:text="@string/sign_up_button_main"
        android:layout_centerHorizontal="true"/>

    <com.facebook.login.widget.LoginButton
        android:id="@+id/buttonFacebookLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/act_main_BUT_signin"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"/>

    <com.google.android.gms.common.SignInButton
        android:id="@+id/act_main_BUT_Google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonFacebookLogin"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
 />

</RelativeLayout>