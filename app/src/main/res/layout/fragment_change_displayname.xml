<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/frag_CDName_ET_DisplayName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:singleLine="true"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="18dp"
        android:importantForAutofill="no"/>

    <Button
        android:id="@+id/frag_CDName_BUT_saveChanges"
        style="@style/ButtonSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_submit"
        android:text="@string/frag_Settings_Save"
        android:layout_below="@id/frag_CDName_ET_DisplayName"
        android:layout_centerHorizontal="true"
        android:stateListAnimator="@animator/button_click_animator" />
</RelativeLayout>