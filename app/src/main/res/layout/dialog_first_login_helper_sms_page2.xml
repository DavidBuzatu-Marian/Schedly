<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/dialog_FLHelperPage2_IV_InfoGraphic"
        android:layout_width="128dp"
        android:layout_height="128dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_splash"
        android:contentDescription="SchedlyIcon" />
    <TextView
        android:id="@+id/dialog_FLHelperPage2_TV_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dialog_FLHelperPage2_IV_InfoGraphic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:textSize="34sp"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/dialog_FLHelperPage2_Title"
        android:textAlignment="center"
        android:layout_marginTop="24dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        />

    <TextView
        android:id="@+id/dialog_FLHelperPage4_TV_Body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dialog_FLHelperPage2_TV_Title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:textSize="20sp"
        android:fontFamily="@font/montserrat_regular"
        android:text="@string/dialog_FLHelperPage2_Body_Point2"
        android:textAlignment="center"
        android:padding="12dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        />

    <Button
        android:id="@+id/dialog_FLHelper_BUT_Close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_info_cancel"
        android:textColor="#FFFFFF"
        android:text="@string/dialog_FLHelper_BUT_Close"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:enabled="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>