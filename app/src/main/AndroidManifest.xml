<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.davidbuzatu.schedly">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.READ_CALL_LOG"/>

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name="com.davidbuzatu.schedly.model.ContextForStrings">

        <activity
            android:name="com.davidbuzatu.schedly.StartSplashActivity"
            android:theme="@style/SplashTheme"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:clearTaskOnLaunch="false">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.davidbuzatu.schedly.SettingsActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"/>
        <activity android:name="com.davidbuzatu.schedly.ForgotPasswordActivity"
            android:screenOrientation="portrait" />

        <service
            android:name="com.davidbuzatu.schedly.service.MonitorIncomingSMSService"
            android:enabled="true"
            android:label="@string/app_name" />

        <receiver
            android:name="com.davidbuzatu.schedly.model.SMSBroadcastReceiver"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.BROADCAST_SMS">
            <intent-filter android:priority="2147483647">
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
            <intent-filter>
                <action android:name=".SettingsActivity" />
            </intent-filter>
        </receiver>

        <activity android:name="com.davidbuzatu.schedly.ScheduleDurationActivity"
            android:screenOrientation="portrait" />
        <activity android:name="com.davidbuzatu.schedly.SetWorkingHoursActivity"
            android:screenOrientation="portrait" />
        <activity android:name="com.davidbuzatu.schedly.SetProfessionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.davidbuzatu.schedly.SetPhoneNumberActivity"
            android:parentActivityName="com.davidbuzatu.schedly.MainActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.davidbuzatu.schedly.MainActivity" />
        </activity>
        <activity android:name="com.davidbuzatu.schedly.CalendarActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.DIAL" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SENDTO" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.davidbuzatu.schedly.MainActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"/>
        <activity
            android:name="com.davidbuzatu.schedly.SignUpWithEmailActivity"
            android:parentActivityName="com.davidbuzatu.schedly.MainActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.davidbuzatu.schedly.MainActivity" />
        </activity>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />
        <activity
            android:name="com.facebook.CustomTabActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="@string/fb_login_protocol_scheme" />
            </intent-filter>
        </activity>
    </application>

</manifest>